{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "PORT": "3220",
    "MONGO_URI": "your_mongodb_connection_string",
    "JWT_SECRET": "your_jwt_secret",
    "EMAIL_USER": "your_email@gmail.com",
    "EMAIL_PASS": "your_email_app_password"
  }
}
